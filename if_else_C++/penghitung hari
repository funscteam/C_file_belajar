#include <iostream>
using namespace std;

int main() {
    int hari;

    cout << "Masukkan angka (1, 2, 3, 4, 5, 6, 7) untuk melihat hari: ";
    cin >> hari;

    if (hari == 1) {
        cout << "Ini adalah hari Senin" << endl;
    } else if (hari == 2) {
        cout << "Ini adalah hari Selasa" << endl;
    } else if (hari == 3) {
        cout << "Ini adalah hari Rabu" << endl;
    } else if (hari == 4) {
        cout << "Ini adalah hari Kamis" << endl;
    } else if (hari == 5) {
        cout << "Ini adalah hari Jumat" << endl;
    } else if (hari == 6) {
        cout << "Ini adalah hari Sabtu" << endl;
    } else if (hari == 7) {
        cout << "Ini adalah hari Minggu" << endl;
    } else {
        cout << "Angka yang dimasukkan tidak valid" << endl;
    }

    return 0;
}
